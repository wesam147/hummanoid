<?xml version="1.0" encoding="UTF-8"?>
<robot name="full_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <material name="Blue">
    <color rgba="0 0 0.8 1" />
  </material>
  <material name="Black">
    <color rgba="0 0 0 1" />
  </material>
  <material name="White">
    <color rgba="1 1 1 1" />
  </material>
  <material name="Red">
    <color rgba="1 0 0 1" />
  </material>


  <link name="base_footprint" />

  <link name="base_link">
    <pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="10" />
      <origin xyz="0 0 0.1" rpy="0 0 0" />
      <inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0.0" ixz="0.0" iyz="0.0" />
    </inertial>

    <visual name='base_visual'>
      <geometry>
        <box size="0.984 0.65 0.095" />
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0" /><!--.125-->
      <material name="Blue" />
    </visual>
    <collision name='base_collision'>
      <geometry>
        <box size="0.984 0.65 0.095" />
      </geometry>
    </collision>




    <collision name='lidar_bed'>
      <origin xyz="0.4 0.0 0.05" rpy="0.0 0.0 0.0" />
      <geometry>
        <box size="0.1 0.1 0.1" />
      </geometry>
    </collision>
    <visual name='lidar_bed_visual'>
      <origin xyz="0.4 0.0 0.05" rpy="0.0 0.0 0.0" />

      <geometry>
        <box size="0.1 0.1 0.1" />
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1" />
      </material>
    </visual>

  </link>

  <link name="caster_right">
  <collision name="caster_wheel_right_collision">
    <origin rpy="0 0 0" xyz="0 0 0" />
    <geometry>
      <sphere radius="0.07" />
    </geometry>
  </collision>
  <visual name="caster_wheel_right_visual">
    <origin rpy="0 0 0" xyz="0 0 0" />
    <geometry>
      <sphere radius="0.07" />
    </geometry>
  </visual>
</link>

<gazebo reference="caster_right">
  <mu1 value="0.0"/>
  <mu2 value="0.0"/>
  <material>Gazebo/Red</material>
  <turnGravityOff>false</turnGravityOff>
</gazebo>

<link name="caster_left">
  <collision name="caster_wheel_left_collision">
    <origin rpy="0 0 0" xyz="0 0 0" />
    <geometry>
      <sphere radius="0.07" />
    </geometry>
  </collision>

  <visual name="caster_wheel_left_visual">
    <origin rpy="0 0 0" xyz="0 0 0" />
    <geometry>
      <sphere radius="0.07" />
    </geometry>
  </visual>
</link>

<gazebo reference="caster_left">
  <mu1 value="0.0"/>
  <mu2 value="0.0"/>
  <material>Gazebo/Red</material>
  <turnGravityOff>false</turnGravityOff>
</gazebo>

<joint name="caster_right_joint" type="fixed">
  <parent link="base_link" />
  <child link="caster_right" />
  <axis xyz="0 1 0" />
  <origin xyz="0.367135 0.2 -0.05" />
</joint>


<joint name="caster_left_joint" type="fixed">
  <parent link="base_link" />
  <child link="caster_left" />
  <axis xyz="0 1 0" />
  <origin xyz="0.367135 -0.2 -0.05" />
</joint>

  <link name="laser_frame">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.04" />
      </geometry>
      <material name="Red" />
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.04" />
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5" />
      <origin xyz="0 0 0" rpy="0 0 0" />
      <inertia ixx="0.03" iyy="0.03" izz="0.03" ixy="0.0" ixz="0.0" iyz="0.0" />
    </inertial>
  </link>

  <joint name='laser_frame_to_base_link' type='fixed'>
    <parent link="base_link" />
    <child link="laser_frame" />
    <origin xyz="0.4 0.0 0.114" rpy="0.0 0.0 0.0" />
    <axis xyz="0 0 1" />

  </joint>


  <gazebo reference="laser_frame">
    <sensor type="ray" name="head_hokuyo_sensor">
      <pose>0 0 0 0 0 0</pose>
      <visualize>true</visualize>
      <update_rate>40</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>720</samples>
            <resolution>1</resolution>
            <min_angle>-2.250796</min_angle>
            <max_angle>2.250796</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.10</min>
          <max>30.0</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <!-- Noise parameters based on published spec for Hokuyo laser
achieving "+-30mm" accuracy at range < 10m. A mean of 0.0m and
stddev of 0.01m will put 99.7% of samples within 0.03m of the true
reading. -->
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
      <plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_laser.so">
        <topicName>/laser/scan</topicName>
        <frameName>laser_frame</frameName>
      </plugin>
    </sensor>
  </gazebo>


  <joint name="base_footprint_to_base_link" type="fixed">
    <parent link="base_footprint" />
    <child link="base_link" />
    <origin rpy="0 0 0" xyz="0 0 0" /><!--0.492135
    0 0/-->
  </joint>


  <link name="right_wheel">
    <visual name="right_wheel_visual">
      <geometry>
        <cylinder length="0.065" radius="0.125" />
      </geometry>
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
    </visual>
    <collision>
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
      <geometry>
        <cylinder length="0.065" radius="0.125" />
      </geometry>
    </collision>
    <inertial>
      <mass value="1" />
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707" />
      <inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0.0" ixz="0.0" iyz="0.0" />
    </inertial>
  </link>

  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.065" radius="0.125" />
      </geometry>
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
    </visual>
    <collision>
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
      <geometry>
        <cylinder length="0.065" radius="0.125" />
      </geometry>
    </collision>
    <inertial>
      <mass value="1" />
      <origin xyz="0 0 0" rpy="0 0 0" />
      <inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0.0" ixz="0.0" iyz="0.0" />
    </inertial>
  </link>


  <joint name="wheel_0_joint" type="continuous">
    <parent link="base_link" />
    <child link="right_wheel" />
    <axis xyz="0 1 0" />
    <origin xyz="-0.315 0.355 0.0" />
  </joint>


  <joint name="wheel_1_joint" type="continuous">
    <parent link="base_link" />
    <child link="left_wheel" />
    <axis xyz="0 1 0" />
    <origin xyz="-0.315 -0.355 0.0" />
  </joint>


  <link name="kinect_link">
    <visual>
      <geometry>
        <box size="0.064 0.121 0.0381" />
      </geometry>
      <material name="Black" />
    </visual>
    <collision>
      <geometry>
        <box size="0.064 0.121 0.0381" />
      </geometry>
      <material name="Black" />
    </collision>
    <inertial>
      <mass value="0.0001" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
        iyy="0.0001" iyz="0.0"
        izz="0.0001" />
    </inertial>
  </link>


  <joint name="kinect_depth_joint" type="fixed">
    <origin xyz="0 0.028 0" rpy="0 0 0" />
    <parent link="kinect_link" />
    <child link="kinect_depth_frame" />
  </joint>

  <link name="kinect_depth_frame">
    <inertial>
      <mass value="0.0001" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
        iyy="0.0001" iyz="0.0"
        izz="0.0001" />
    </inertial>
  </link>

  <joint name="depth_optical_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="kinect_depth_frame" />
    <child link="kinect_depth_optical_frame" />
  </joint>

  <link name="kinect_depth_optical_frame">
    <inertial>
      <mass value="0.0001" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
        iyy="0.0001" iyz="0.0"
        izz="0.0001" />
    </inertial>
  </link>

  <joint name="base_link_to_kinect_link" type="fixed">
    <parent link="base_link" />
    <child link="kinect_link" />
    <origin rpy="0 0 0" xyz="0.5 0 0.05155" /><!--0.4-->
  </joint>


  <link name="leg1">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <geometry>
        <cylinder radius="0.125" length="0.6" />
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1" />
      </material>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <geometry>
        <cylinder radius="0.125" length="0.6" />
      </geometry>
      <material name="blue" />
      <color rgba="0 0 1 1" />
    </collision>
    <inertial>
      <mass value="5" />
      <origin xyz="0 0 0" rpy="0 0 0" />
      <inertia ixx="0.03" iyy="0.03" izz="0.03" ixy="0.0" ixz="0.0" iyz="0.0" />
    </inertial>
  </link>
  <link name="leg2">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <geometry>
        <cylinder radius="0.125" length="0.6" />
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1" />
      </material>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <geometry>
        <cylinder radius="0.125" length="0.6" />
      </geometry>
      <material name="blue" />
      <color rgba="0 0 1 1" />
    </collision>
    <inertial>
      <mass value="5" />
      <origin xyz="0 0 0" rpy="0 0 0" />
      <inertia ixx="0.03" iyy="0.03" izz="0.03" ixy="0.0" ixz="0.0" iyz="0.0" />
    </inertial>
  </link>

  <joint name="base_link_leg1" type="fixed">
    <origin xyz="0.09375 0.105 0.35" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="leg1" />
    <limit effort="30" velocity="1.0" lower="-1.57" upper="1.57" />
    <axis xyz="0 0 1" />
  </joint>
  <joint name="base_link_leg2" type="fixed">
    <origin xyz="0.09375 -0.105 0.35" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="leg2" />
    <limit effort="30" velocity="1.0" lower="-1.57" upper="1.57" />
    <axis xyz="0 0 1" />
  </joint>

  <gazebo>

    <plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so">
      <!-- Plugin update rate in Hz -->
      <updateRate>10</updateRate>
      <!-- Name of left joint, defaults to `left_joint` -->
      <leftJoint>wheel_1_joint</leftJoint>
      <!-- Name of right joint, defaults to `right_joint` -->
      <rightJoint>wheel_0_joint</rightJoint>
      <!-- The distance from the center of one wheel to the other, in meters, defaults to 0.34 m -->
      <wheelSeparation>0.4</wheelSeparation>
      <!-- Diameter of the wheels, in meters, defaults to 0.15 m -->
      <wheelDiameter>0.2</wheelDiameter>
      <!-- Wheel acceleration, in rad/s^2, defaults to 0.0 rad/s^2 -->
      <wheelAcceleration>1.0</wheelAcceleration>
      <!-- Maximum torque which the wheels can produce, in Nm, defaults to 5 Nm -->
      <wheelTorque>20</wheelTorque>
      <!-- Topic to receive geometry_msgs/Twist message commands, defaults to `cmd_vel` -->
      <commandTopic>cmd_vel</commandTopic>
      <!-- Topic to publish nav_msgs/Odometry messages, defaults to `odom` -->
      <odometryTopic>odom</odometryTopic>
      <!-- Odometry frame, defaults to `odom` -->
      <odometryFrame>odom</odometryFrame>
      <!-- Robot frame to calculate odometry from, defaults to `base_footprint` -->
      <robotBaseFrame>base_footprint</robotBaseFrame>
      <!-- Odometry source, 0 for ENCODER, 1 for WORLD, defaults to WORLD -->
      <odometrySource>1</odometrySource>
      <!-- Set to true to publish transforms for the wheel links, defaults to false -->
      <publishWheelTF>true</publishWheelTF>
      <!-- Set to true to publish transforms for the odometry, defaults to true -->
      <publishOdom>true</publishOdom>
      <!-- Set to true to publish sensor_msgs/JointState on /joint_states for the wheel
        joints, defaults to false -->
      <publishWheelJointState>true</publishWheelJointState>
      <!-- Set to true to swap right and left wheels, defaults to true -->
      <legacyMode>false</legacyMode>
    </plugin>
  </gazebo>


</robot>